[Unit]
Description=Splash screen
DefaultDependencies=no
After=systemd-vconsole-setup.service systemd-udev-trigger.service systemd-udevd.service

[Service]
#For not showing the loading bar ExecStart=/usr/bin/fb0 -d /dev/fb0 --noverbose -a /usr/bin/file_name.png

ExecStart=/usr/bin/fbi -d /dev/fb0 --noverbose -a /lib/systemd/system/psplash-davide-img.png
StandardInput=tty
StandardOutput=tty

[Install]
WantedBy=sysinit.target

